<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Jeu Licence 2"
        android:textSize="25dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/background_image_jeul2" />

    <Button
        android:id="@+id/btnNormalGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="50dp"
        android:text="Orientation Normale"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/scoreNormale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="230dp"
        android:textStyle="bold"
        android:text="Score :" />

    <TextView
        android:id="@+id/valorScoreNormale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="280dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnReverseGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="50dp"
        android:text="Orientation InversÃ©e"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/scoreReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="230dp"
        android:textStyle="bold"
        android:text="Score :" />

    <TextView
        android:id="@+id/valorScoreReversee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="280dp"
        android:textStyle="bold"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnExitGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="45dp"
        android:text="Quitter"
        android:textSize="10dp" />
</RelativeLayout>
